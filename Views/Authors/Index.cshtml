@model IEnumerable<CPMSwebapp.Models.Author>

@{
    ViewData["Title"] = "Index";
}

<h1>Author</h1>
<hr />
<h6>Click 'Edit' to edit author details</h6>
<h6>Click 'Details' to view author details</h6>
<h6>Click 'Delete' to delete author entry</h6>
<hr />

<p>
    <a asp-action="Create" class=" btn btn-sm btn-primary m1-1">Become New Author</a>
</p>
<table class="table table-sm table-condensed table-responsive-sm table-bordered" href="textbox.css">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MiddleInitial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Affiliation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="tablestretch" href="textbox.css">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddleInitial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Affiliation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                <div class="btn-group">
                <a asp-action="Edit" asp-route-id="@item.AuthorId" class="btn btn-sm btn-info">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.AuthorId" class="btn btn-sm btn-info">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.AuthorId" class="btn btn-sm btn-danger" >Delete</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
